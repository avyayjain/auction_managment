{
  "compilerOptions": {
    "target": "ES6",                                  // Modern JavaScript (instead of old ES5)
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ES2015"], // Necessary for modern features
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "include": ["templates"],
  "exclude": ["node_modules"]
}
